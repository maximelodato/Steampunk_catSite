<!-- app/views/devise/registrations/new.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>Inscription</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, 'Adresse email', class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Adresse email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'Mot de passe', class: 'form-label' %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Mot de passe" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, 'Confirmer mot de passe', class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirmer mot de passe" %>
            </div>

            <div class="mb-3">
              <%= f.submit 'S\'inscrire', class: 'btn btn-primary w-100', style: 'background-color: #d4a373; border-color: #d4a373;' %>
            </div>
          <% end %>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
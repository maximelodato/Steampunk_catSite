<!-- app/views/products/show.html.erb -->

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= @item.image_url %>" class="img-fluid" alt="<%= @item.title %>">
    </div>
    <div class="col-md-6">
      <h1><%= @item.title %></h1>
      <p><%= @item.description %></p>
      <p><strong>Price: $<%= @item.price %></strong></p>
      <%= link_to 'Back to Products', products_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>